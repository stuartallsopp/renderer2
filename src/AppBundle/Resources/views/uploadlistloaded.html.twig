{% if list|length!=0 %}
<table class="table table-sm">
    <thead>
    <tr>
        <th>Render</th>
        <th class="text-right">Start</th>
        <th class="text-right">End</th>
        <th class="text-right">Threads</th>
        <th class="text-right">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for item in list %}
        <tr>
            <td>{{ item.filename }} <span class="badge badge-pill badge-success">{{ (item.filesize/1024)|number_format(0, '.', ',') }}Mb</span></td>
            <td class="text-right">{{ item.framestart }}</td>
            <td class="text-right">{{ item.frameend }}</td>
            <td class="text-right">{{ item.threads }}</td>
            <td class="text-right">
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-secondary" onclick="publish({{ item.id }})"><i class="fa fa-cloud-upload"></i></button>
                    <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" onclick="publish({{ item.id }})" href="#"><i class="fa fa-cloud-upload"></i> Publish</a>
                        <a class="dropdown-item" onclick="showeditform({{ item.id }})" href="#"><i class="fa fa-edit"></i> Edit</a>
                        <a class="dropdown-item" onclick="deleteupload({{ item.id }})" href="#"><i class="fa fa-trash"></i> Delete</a>
                    </div>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
    <div class="card-block">
        <p>No Files Uploaded</p>
    </div>
{% endif %}